[Unit]
Description=Docker Daemon
After=network.target

[Service]
EnvironmentFile=/run/flannel/subnet.env
ExecStart=/usr/bin/dockerd -p /var/run/dockerd.pid --insecure-registry docker.wemeeting.huawei.com -H unix:///var/run/docker.sock -H tcp://0.0.0.0:2375 --bip=${FLANNEL_SUBNET} --mtu=${FLANNEL_MTU} --graph="/data01/docker"
Type=simple
Restart=always

[Install]
WantedBy=multi-user.target
